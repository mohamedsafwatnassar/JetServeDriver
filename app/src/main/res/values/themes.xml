<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JetServeDriver" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.JetServeDriver.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.JetServeDriver.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.JetServeDriver.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- App bar -->
    <style name="AppBar">
        <item name="android:layout_height">@dimen/_46sdp</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <!-- Back Button -->
    <style name="BackButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:paddingStart">@dimen/_5sdp</item>
        <item name="android:paddingEnd">@dimen/_5sdp</item>
        <item name="android:paddingBottom">@dimen/_1sdp</item>
        <item name="android:paddingTop">@dimen/_1sdp</item>
        <item name="android:src">@drawable/ic_back</item>
    </style>

    <!-- header Title-->
    <style name="header_title">
        <!-- <item name="android:fontFamily">@font/poppins_semi_bold</item> -->
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ShapeAppearance.Image.CircleImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="backgroundColor">@color/darkGreen</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="customButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:layout_height">@dimen/_32sdp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">@dimen/_16sdp</item>
        <item name="android:layout_marginEnd">@dimen/_16sdp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:background">@drawable/btn_selector</item>
    </style>

</resources>
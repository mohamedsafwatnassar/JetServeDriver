<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_12sdp"
    android:background="@drawable/bg_dialog_confirm_cancel_trip">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_validation"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="@dimen/_16sdp"
        android:src="@drawable/ic_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--    style="@style/font_lato_bold"-->
    <TextView
        android:id="@+id/txt_title_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:gravity="center"
        android:text="@string/required_permission"
        android:textColor="#101828"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_validation" />

    <!--    style="@style/font_lato_regular"-->
    <TextView
        android:id="@+id/txt_desc_dialog"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="#6F7070"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_title_dialog"
        tools:text="desc" />

    <!--    style="@style/font_lato_regular"-->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_cancel_trip"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="@dimen/_18sdp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/bg_black"
        android:gravity="center"
        android:text="@string/allow"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_desc_dialog" />

</androidx.constraintlayout.widget.ConstraintLayout>